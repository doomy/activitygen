#!/usr/bin/env php
<?php

require __DIR__ . '/../vendor/autoload.php';

use App\Command\GetActivityCommand;
use App\Command\AddActivityCommand;
use App\Command\DeleteActivityCommand;
use App\DatabaseConnectionFactory;
use Symfony\Component\Console\Application;

$database = DatabaseConnectionFactory::create();

$application = new Application('ActivityGen', '1.0.0');
$application->add(new GetActivityCommand($database));
$application->add(new AddActivityCommand($database));
$application->add(new DeleteActivityCommand($database));
$application->setDefaultCommand('activity:get');
$application->run();
